<div id="nav">
	<div id="content">
		<%= link_to 'Home', '/' %>
	  <div class="right">
			<%= link_to 'Add New Profile', new_profile_path %>
		</div>
	</div>
</div>

<div id="main">	
	<div id="inner">
		<h2>Latest Profiles</h2>
		<ul style="list-style:none">

		<% @profiles.each do |profile| %>
			<li>
				<p class="left"><%= distro_image profile %></p>
				<p class="right"><%= link_to "View", profile %></p>
				<h2><%= profile.distro %> <%= profile.version %></h2>
				<p>For <span><%= profile.architecture %></span> machines</p>
				<p id="submitted">Submitted by <%= profile.author %> on <%= profile.updated_at %></p>
			</li>
		<% end %>
		</ul>
	</div>
</div>
